<div id="conocenos" class="row py-4 scroll_section">
  <div class="col-md-4 offset-md-2">
    <h2>Visitanos</h2>
    <div class="mapa">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3284.2185680295775!2d-58.422641223597026!3d-34.598634222956214!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bccb666703c59f%3A0x6f9fd2b57bacdcac!2s%C3%81rea%20de%20Desarrollo%20Profesional%20-%20Pasant%C3%ADas!5e0!3m2!1ses-419!2sar!4v1716301894098!5m2!1ses-419!2sar"
        style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

      <div class="col-md-4 mt-4 mt-sm-0">
        <h2>Contactanos</h2>
        <form class="row g-3" action="/" method="post">
          <div class="col-md-6">
            <label for="inputName4" class="form-label">Nombre</label>
            <input type="name" class="form-control" id="inputName4" name="nombre">
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Apellido</label>
            <input type="password" class="form-control" id="inputPassword4" name="apellido">
          </div>
          <div class="col-12">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="" name="email">
          </div>
          <div class="col-12">
            <label for="inputAddress2" class="form-label">Tel</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="" name="tel">
          </div>
          <div class="col-md-6">
            <label for="inputCity" class="form-label">Mensaje</label>
            <input type="text" class="form-control" id="inputCity" name="mensaje">
          </div>
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck">
              <label class="form-check-label" for="gridCheck">
                Check me out
              </label>
            </div>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Sign in</button>
          </div>
        </form>
        {{message}}
      </div>
    </div>
  </div>
</div>